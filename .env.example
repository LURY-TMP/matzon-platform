# Database — PostgreSQL (Consistency Layer)
DATABASE_URL=postgresql://user:password@localhost:5432/matzon

# Database — MongoDB (Velocity Layer)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/matzon

# JWT — RS256
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Application
NODE_ENV=development
API_PORT=4000
WEB_PORT=3000
